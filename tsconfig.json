{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "removeComments": false,
    "preserveConstEnums": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "lib": ["dom", "es5", "es2015.collection"],
    "types": []
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
